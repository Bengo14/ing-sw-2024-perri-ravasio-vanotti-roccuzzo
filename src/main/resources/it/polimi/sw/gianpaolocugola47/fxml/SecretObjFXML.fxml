<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="854.0"
           prefWidth="1280.0" styleClass="boardTable" stylesheets="@../css/Style.css"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.sw.gianpaolocugola47.view.gui.SecretObjController">
    <VBox prefHeight="200.0" prefWidth="100.0">
        <VBox alignment="TOP_CENTER" prefHeight="670.0" prefWidth="1280.0">
            <Label fx:id="label" alignment="CENTER" maxWidth="513.0" prefHeight="86.0" prefWidth="513.0"
                   styleClass="tooltip" stylesheets="@../css/Style.css" text="choose your secret objective">
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
            </Label>
            <VBox prefHeight="585.0" prefWidth="1280.0">
                <HBox alignment="CENTER" prefHeight="530.0" prefWidth="1280.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <ImageView fx:id="secret_1" fitHeight="351.0" fitWidth="440.0"
                               onMouseClicked="#handleSecret1Clicked" pickOnBounds="true"
                               preserveRatio="true"/>
                    <HBox prefHeight="100.0" prefWidth="200.0"/>
                    <ImageView fx:id="secret_2" fitHeight="351.0" fitWidth="440.0"
                               onMouseClicked="#handleSecret2Clicked" pickOnBounds="true"
                               preserveRatio="true"/>
                </HBox>
            </VBox>
        </VBox>
        <HBox prefHeight="43.0" prefWidth="1280.0"/>
        <HBox alignment="CENTER" prefHeight="131.0" prefWidth="1280.0">
            <Button fx:id="obj_button" mnemonicParsing="false" onAction="#handleObjButtonClicked" prefHeight="72.0"
                    prefWidth="126.0" styleClass="login-button" stylesheets="@../css/Style.css" text="Start">
                <HBox.margin>
                    <Insets bottom="50.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</StackPane>
